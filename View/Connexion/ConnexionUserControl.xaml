<UserControl x:Class="AWIT.View.Connexion.ConnexionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AWIT.View.Connexion"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
            <StackPanel Margin="20" >

                <DockPanel Margin="20">
                    <Label Width="50">Login</Label>
                    <TextBox  x:Name="Login">admin</TextBox>
                </DockPanel>
                <DockPanel Margin="20">
                    <Label Width="50">Mdp</Label>
                    <PasswordBox x:Name="MDP"></PasswordBox>
                </DockPanel>
                <Button Name="Valider" Click="Valider_Click" Margin="20">VALIDER</Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
