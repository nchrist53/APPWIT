<Window x:Class="AWIT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AWIT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="FMain">
        <StackPanel>
            <Menu x:Name="MMenu" Height="25">
                <MenuItem x:Name="Connexion" Header="Connexion"/>
                <MenuItem x:Name="Client"  Header="Gestion des clients" Click="Client_Click"/>
                <MenuItem x:Name="Commande" Header="Gestion des commandes" Click="Commande_Click"/>
                <MenuItem x:Name="Musique" Header="Gestion des musiques" Click="Musique_Click"/>
                <MenuItem x:Name="Aide" Header="Aide" Click="Aide_Click"/>
            </Menu>

            <StackPanel >
                <Frame x:Name="FSMain" NavigationUIVisibility="Hidden"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
